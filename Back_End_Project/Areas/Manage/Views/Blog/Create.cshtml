@model Blog

@{ SelectList categories = new SelectList(ViewBag.Categories, nameof(BlogCategory.Id), nameof(BlogCategory.Name));
    SelectList tags = new SelectList(ViewBag.Tags, nameof(BlogTag.Id), nameof(BlogTag.Name)); }

<h1>Create Blog</h1>

<div class="my-3 row justify-content-center">
    <div class="col-lg-11">
        <form class="row justify-content-between" method="post" enctype="multipart/form-data">
            <div class="col-lg-12  form-group">
                <label asp-for="BlogTitle" class="form-label"> Product Name</label>
                <input asp-for="BlogTitle" class="form-control">
                <span asp-validation-for="BlogTitle" class="text-danger"></span>
            </div>
            <div class="col-lg-6 pr-2 form-group">
                <label class="form-label" asp-for="BlogCategoryId">Category</label>
                <select asp-for="BlogCategoryId" class="form-control" asp-items="@categories">
                    <option value="">Select Category</option>
                </select>
                <span class="text-danger" asp-validation-for="BlogCategoryId"></span>
            </div>
            <div class="col-lg-6 pl-2 form-group">
                <label class="form-label" asp-for="BlogTagId">Brand</label>
                <select asp-for="BlogTagId" class="form-control" asp-items="@tags">
                    <option value="">Select Brand</option>
                </select>
                <span class="text-danger" asp-validation-for="BlogTagId"></span>
            </div>
            <div class="col-lg-6 pr-2 mb-3 form-group">
                <label asp-for="UpperText" class="form-label">Upper text</label>
                <input asp-for="UpperText" class="form-control">
                <span class="text-danger" asp-validation-for="UpperText"></span>
            </div>
            <div class="col-lg-6 pl-2 mb-3 form-group">
                <label asp-for="StrongText" class="form-label">Middle text</label>
                <input asp-for="StrongText" class="form-control">
                <span class="text-danger" asp-validation-for="StrongText"></span>
            </div>
            <div class="col-lg-6 pr-2 mb-3 form-group">
                <label asp-for="BottomText" class="form-label">Bottom text</label>
                <input asp-for="BottomText" class="form-control">
                <span class="text-danger" asp-validation-for="BottomText"></span>
            </div>
            <div class="col-lg-12 row">
                <div class="col-lg-3 ml-3 form-check">
                    <input asp-for="IsRecent" class="form-check-input ">
                    <label asp-for="IsRecent" class="form-check-label">It will be shown as recent post in blog detail page and main blog page</label>
                </div>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="BlogPhoto"></label>
                <input asp-for="BlogPhoto" class="form-control" placeholder="Main Photo">
                <span class="text text-danger" asp-validation-for="BlogPhoto"></span>
            </div>
            <button type="submit" class="ml-2 btn btn-primary">Create</button>
        </form>
    </div>
</div>

@section Script
{
    <partial name="_ValidationPartial">
}
