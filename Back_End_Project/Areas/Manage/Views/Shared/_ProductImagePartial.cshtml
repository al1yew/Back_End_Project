@model List<ProductImage>
@{ SelectList selectCategoriesItems = new SelectList(ViewBag.Categories, nameof(Category.Id), nameof(Category.Name));
    SelectList selectBrandsItems = new SelectList(ViewBag.BrandsForProducts, nameof(Brand.Id), nameof(Brand.Name)); }
@if (Model != null)
{
    foreach (ProductImage productImage in Model)
    {
        <div class="col-lg-1">
            <a class="close deleteproductimage" asp-area="Manage" asp-controller="Product" asp-action="DeleteImage" asp-route-id="@productImage.Id">
                <span>&times;</span>
            </a>
            <img class="img-fluid" src="~/assets/img/product-slider-imgs/@productImage.Image">
        </div>
    }
}