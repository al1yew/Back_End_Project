@model ProductReviewVM

<form method="post" class="review-form" asp-controller="Product" asp-action="AddProductReview" asp-route-id="@ViewBag.ProductId">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group row">
        <div class="col">
            <label asp-for="Name" class="col-form-label"><span class="text-danger">*</span>Name</label>
            <input asp-for="Name" type="text" class="form-control" required>
            <span class="text-danger text-danger" asp-validation-for="Name"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <label asp-for="Email" class="col-form-label"><span class="text-danger">*</span> Your Email</label>
            <input asp-for="Email" type="email" class="form-control" required>
            <span class="text-danger text-danger" asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <label asp-for="ReviewText" class="col-form-label"><span class="text-danger">*</span> Your Review</label>
            <textarea asp-for="ReviewText" class="form-control" required></textarea>
            <span class="text-danger text-danger" asp-validation-for="ReviewText"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <label asp-for="Rating" class="col-form-label"><span class="text-danger">*</span> Rating</label>
            Bad
            <input asp-for="Rating" class="rating"
                   max="5"
                   oninput="this.style.setProperty('--value', this.value)"
                   step="1"
                   type="range"
                   value="1">
            Good
        </div>
    </div>

    <div class="buttons">
        <button class="sqr-btn" type="submit">Continue</button>
    </div>

</form>