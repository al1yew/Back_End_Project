@model RegisterVM

<div asp-validation-summary="ModelOnly"></div>
<form method="post" asp-controller="Account" asp-action="Register">
    <div class="single-input-item">
        <input asp-for="Name" placeholder=" Name" required />
        <span class="text-black-50 text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="single-input-item">
        <input asp-for="SurName" placeholder="Surname" required />
        <span class="text-black-50 text-danger" asp-validation-for="SurName"></span>
    </div>
    <div class="single-input-item">
        <input asp-for="Email" placeholder="Email" required />
        <span class="text-black-50 text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="single-input-item">
        <input asp-for="UserName" placeholder="Username" required />
        <span class="text-black-50 text-danger" asp-validation-for="UserName"></span>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="single-input-item">
                <input asp-for="Password" placeholder="Enter your Password" required />
                <span class="text-black-50 text-danger" asp-validation-for="Password"></span>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="single-input-item">
                <input asp-for="ConfirmPassword" placeholder="Repeat your Password" required />
                <span class="text-black-50 text-danger" asp-validation-for="ConfirmPassword"></span>
            </div>
        </div>
    </div>
    <div class="single-input-item">
        <div class="login-reg-form-meta">
            <div class="remember-meta">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="subnewsletter">
                    <label class="custom-control-label" for="subnewsletter">Subscribe Our Newsletter</label>
                </div>
            </div>
        </div>
    </div>
    <div class="single-input-item">
        <button type="submit" class="btn">Register</button>
    </div>
</form>
