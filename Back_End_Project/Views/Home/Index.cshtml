@model HomeVM
<!-- main wrapper start -->
<main>
    <!-- hero slider section start -->
    @await Component.InvokeAsync("HomeSlider", Model.HomeSliders)
    <!-- hero slider section end -->
    <!-- service features start -->
    @await Component.InvokeAsync("HomeService", Model.HomeServices)
    <!-- service features end -->
    <!-- our product area start -->
    <section class="our-product section-padding">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title text-center">
                        <h2 class="title">Our Products</h2>
                        <p class="sub-title">Lorem ipsum dolor sit amet consectetur adipisicing</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="product-carousel-4 mbn-50 slick-row-15 slick-arrow-style">
                        @foreach (Product product1 in Model.Products.Where(p => p.IsNew))
                        {
                            <div class="product-item mb-50">
                                <div class="product-thumb">
                                    <a asp-controller="Product" asp-action="Detail" asp-route-id="@product1.Id">
                                        <img src="~/assets/img/product/@product1.Image" alt="">
                                    </a>
                                </div>
                                <div class="product-content">
                                    <h5 class="product-name">
                                        <a asp-controller="Product" asp-action="Detail" asp-route-id="@product1.Id">@product1.Name</a>
                                    </h5>
                                    <div class="price-box">
                                        <span class="price-regular">$@product1.Price</span>
                                        <span class="price-old"><del>$@product1.DiscountPrice</del></span>
                                    </div>
                                    <div class="product-action-link">
                                        <a asp-controller="Wishlist" asp-action="AddToWishlist" asp-route-id="@product1.Id" class="addtowishlist" data-toggle="tooltip" title="Wishlist"><i class="ion-android-favorite-outline"></i></a>
                                        <a asp-controller="Basket" asp-action="AddToBasket" asp-route-id="@product1.Id" data-toggle="tooltip" title="Add To Cart" class="addtobasket"><i class="ion-bag "></i></a>
                                        <a data-toggle="modal" data-target="#quick_view" asp-controller="Product" asp-action="DetailModal" asp-route-id="@product1.Id" class="detailmodal">
                                            <span data-toggle="tooltip"
                                                  title="Quick View"><i class="ion-ios-eye-outline"></i></span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- our product area end -->
    <!-- banner statistic area start -->
    @await Component.InvokeAsync("HomeBanner", Model.HomeBanners)
    <!-- banner statistic area end -->
    <!-- top seller area start -->
    <section class="top-seller-area section-padding">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title text-center">
                        <h2 class="title">@Model.HomeBanners.FirstOrDefault(hb => hb.RedirectUrl == null).Title</h2>
                        <p class="sub-title">@Model.HomeBanners.FirstOrDefault(hb => hb.RedirectUrl == null).SubTitle</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-4 col-lg-5 col-md-5">
                    <div class="product-banner">
                        <a>
                            <img src="~/assets/img/banner/@Model.HomeBanners.FirstOrDefault(hb => hb.RedirectUrl == null).Image" alt="product banner">
                        </a>
                    </div>
                </div>
                <div class="col-xl-8 col-lg-7 col-md-7">
                    <div class="top-seller-carousel slick-row-15 mtn-30">
                        @foreach (Product product in Model.IsTopSeller)
                        {
                            <div class="slide-item">
                                <div class="pro-item-small mt-30">
                                    <div class="product-thumb">
                                        <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.Id">
                                            <img src="~/assets/img/product/@product.Image" alt="">
                                        </a>
                                    </div>
                                    <div class="pro-small-content">
                                        <h6 class="product-name">
                                            <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.Id">@product.Name</a>
                                        </h6>
                                        <div class="price-box">
                                            <span class="price-regular">$@product.Price</span>
                                            <span class="price-old"><del>$@product.DiscountPrice</del></span>
                                        </div>
                                        <div class="ratings">
                                            <span><i class="ion-android-star"></i></span>
                                            <span><i class="ion-android-star"></i></span>
                                            <span><i class="ion-android-star"></i></span>
                                            <span><i class="ion-android-star"></i></span>
                                            <span><i class="ion-android-star"></i></span>
                                        </div>
                                        <div class="product-link-2">
                                            <a asp-controller="Wishlist" asp-action="AddToWishlist" asp-route-id="@product.Id" class="addtowishlist" data-toggle="tooltip" title="Wishlist"><i class="ion-android-favorite-outline"></i></a>
                                            <a asp-controller="Basket" asp-action="AddToBasket" asp-route-id="@product.Id" data-toggle="tooltip" title="Add To Cart" class="addtobasket"><i class="ion-bag "></i></a>
                                            <a data-toggle="modal" data-target="#quick_view" asp-controller="Product" asp-action="DetailModal" asp-route-id="@product.Id" class="detailmodal">
                                                <span data-toggle="tooltip"
                                                      title="Quick View"><i class="ion-ios-eye-outline"></i></span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- top seller area end -->
    <!-- latest blog area start -->
    <section class="latest-blog-area">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title text-center">
                        <h2 class="title">our blog</h2>
                        <p class="sub-title">Lorem ipsum dolor sit amet consectetur adipisicing</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="blog-carousel-active slick-row-15">
                        @foreach (Blog blog in Model.Blogs)
                        {
                            <div class="blog-post-item">
                                <div class="blog-thumb">
                                    <a asp-controller="Blog" asp-action="Detail" asp-route-id="@blog.Id">
                                        <img src="~/assets/img/blog/@blog.BlogImage">
                                    </a>
                                </div>
                                <div class="blog-content">
                                    <h5 class="blog-title">
                                        <a asp-controller="Blog" asp-action="Detail" asp-route-id="@blog.Id">
                                            @blog.BlogTitle
                                        </a>
                                    </h5>
                                    <ul class="blog-meta">
                                        <li><span>By: </span>@blog.BlogAuthor.AuthorName</li>
                                        <li><span>On: </span>@blog.PublishDate</li>
                                    </ul>
                                    <a asp-controller="Blog" asp-action="Detail" asp-route-id="@blog.Id" class="read-more">Read More...</a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- latest blog area end -->
    <!-- brand area start -->
    @await Component.InvokeAsync("HomeBrandSlider", Model.HomeBrandSliders)
    <!-- brand area end -->
</main>

<!-- main wrapper end -->