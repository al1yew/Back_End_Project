
@model List<Blog>
<!-- main wrapper start -->
<main>
    <!-- breadcrumb area start -->
    <div class="breadcrumb-area bg-img" data-bg="~/assets/img/banner/breadcrumb-banner.jpg">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb-wrap text-center">
                        <nav aria-label="breadcrumb">
                            <h1 class="breadcrumb-title">Blog</h1>
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Blog</li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumb area end -->
    <!-- blog main wrapper start -->
    <div class="blog-main-wrapper section-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 order-2 order-lg-1">
                    <div class="blog-widget-wrapper">
                        <!-- widget item start -->
                        <div class="blog-widget author-slider">
                            @foreach (Blog blog in Model)
                            {
                <div>
                    <div class="blog-widget-img">
                        <img src="~/assets/img/blog/@blog.BlogAuthor.AuthorImage" />
                    </div>
                    <div class="blog-author-title text-center">
                        <h5>@blog.BlogAuthor.AuthorName</h5>
                        <span>@blog.BlogAuthor.AuthorPosition</span>
                        <div class="blog-widget-icon">
                            <a href="@(blog.BlogAuthor.LinkedInUrl)"><i class="fa fa-linkedin"></i></a>
                            <a href="@(blog.BlogAuthor.LinkedInUrl)"><i class="fa fa-facebook"></i></a>
                            <a href="@(blog.BlogAuthor.LinkedInUrl)"><i class="fa fa-twitch"></i></a>
                            <a href="@(blog.BlogAuthor.LinkedInUrl)"><i class="fa fa-pinterest"></i></a>
                        </div>
                    </div>
                </div>}
                        </div>
                        <p class="text text-danger">Slide for Blogger</p>
                        <!-- widget item end -->
                        <!-- widget item start -->

                        <div class="blog-widget">
                            <h4 class="blog-widget-title">Search</h4>
                            <form class="widget-search-form">
                                <input data-url="http://localhost:15866/Blog/BlogSearch" placeholder="Search keyword" type="text" class="search-field blog-search">
                                <button type="submit" class="search-btn"><i class="fa fa-search"></i></button>
                            </form>
                            <div class="search-body-blog">
                                <ul class="list-group-blog" style="height: 300px;position:absolute;width: 100%; right:0; z-index:500;">
                                </ul>
                            </div>
                        </div>

                        <!-- widget item end -->
                        <!-- widget item start -->
                        <div class="blog-widget">
                            <h4 class="blog-widget-title">Recent Posts</h4>
                            <ul class="recent-posts-inner">
                                @foreach (Blog blog1 in Model.Where(b => b.IsRecent).Take(5))
                                {
                    <li class="recent-posts">
                        <div class="recent-posts-image">
                            <a asp-controller="Blog" asp-action="Detail" asp-route-id="@blog1.Id"><img src="~/assets/img/blog/@blog1.BlogImage"></a>
                        </div>
                        <div class="recent-posts-body">
                            <span class="recent-posts-meta">@blog1.PublishDate</span>
                            <h6 class="recent-posts-title"><a asp-controller="Blog" asp-action="Detail" asp-route-id="@blog1.Id">
                                @if (blog1.BlogTitle.ToString().Length > 15)
                                {
                                    @(blog1.BlogTitle.ToString().Substring(0, 15) + "...")
                                }
                                else
                                {
                                    @blog1.BlogTitle
                                }
                                 </a></h6>
                        </div>
                    </li>
}
                            </ul>
                        </div>
                        <!-- widget item end -->
                        <!-- widget item start -->
                        <div class="blog-widget">
                            <h4 class="blog-widget-title">Categories</h4>
                            <ul class="blog-categories">
                                @foreach (Blog blog2 in Model)
                                {
                                    <li><a>@blog2.BlogCategory.Name</a><span>(@blog2.BlogCategory.Blogs.Distinct().Count())</span></li>
                                }
                            </ul>
                        </div>
                        <!-- widget item end -->
                        <!-- widget item start -->
                        <div class="blog-widget">
                            <h4 class="blog-widget-title">Tags</h4>
                            <div class="blog-tag">
                                @foreach (Blog blog3 in Model)
                                {
                    <a>@blog3.BlogTag.Name</a>}
                            </div>
                        </div>
                        <!-- widget item end -->
                    </div>
                </div>
                <div class="col-lg-9 order-1 order-lg-2">
                    <div class="row">
                        @foreach (var item in Model)
                        {
            <div class="col-md-6">
                <div class="blog-post-item mb-30">
                    <div class="blog-thumb">
                        <a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id">
                            <img src="~/assets/img/blog/@item.BlogImage">
                        </a>
                    </div>
                    <div class="blog-content">
                        <h5 class="blog-title">
                            <a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id">
                                @if (item.BlogTitle.ToString().Length > 25)
                                {
                                    @(item.BlogTitle.ToString().Substring(0, 25) + "...")
                                }
                                else
                                {
                                    @item.BlogTitle
                                }
                            </a>
                        </h5>
                        <ul class="blog-meta">
                            <li><span>By: </span>@item.BlogAuthor.AuthorName</li>
                            <li><span>On: </span>@item.PublishDate</li>
                        </ul>
                        <a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id" class="read-more">Read More...</a>
                    </div>
                </div>
            </div>}
                    </div>
                    <!-- start pagination area -->
                    <div class="paginatoin-area text-center">
                        <ul class="pagination-box">
                            <li><a class="Previous" href="#"><i class="ion-ios-arrow-left"></i></a></li>
                            <li class="active"><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a class="Next" href="#"><i class="ion-ios-arrow-right"></i></a></li>
                        </ul>
                    </div>
                    <!-- end pagination area -->
                </div>
            </div>
        </div>
    </div>
    <!-- blog main wrapper end -->
</main>
<!-- main wrapper end -->
